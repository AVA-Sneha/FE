apiVersion: apps/v1
kind: Deployment
metadata:
  name: customer-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: customer-app
  template:
    metadata:
      labels:
        app: customer-app
    spec:
      containers:
        - name: customer-app
          image: myregistry.azurecr.io/customer-app:latest
          ports:
            - containerPort: 3001
---

apiVersion: v1
kind: Service
metadata:
  name: customer-app-service
spec:
  selector:
    app: customer-app
  ports:
    - protocol: TCP
      port: 3001
      targetPort: 3001
  type: LoadBalancer

